@model dynamic
@{ Layout = null; var order = Model.Order; var product = Model.Product; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Order Success</title>
    <style>
        body { font-family: Arial; margin: 40px; background: #f5f5f5; }
        .container { max-width: 600px; margin: 0 auto; background: white; padding: 40px; border-radius: 10px; text-align: center; }
        .success { background: #d4edda; color: #155724; padding: 20px; border-radius: 8px; margin: 20px 0; }
        .details { background: #f8f9fa; padding: 20px; border-radius: 8px; margin: 20px 0; text-align: left; }
        a { color: #3498db; text-decoration: none; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <h1>✅ Order Success!</h1>
        <div class="success">
            <h3>Thank you for your purchase!</h3>
        </div>
        <div class="details">
            <p><strong>Order ID:</strong> @order.Id</p>
            <p><strong>Product:</strong> @product.Name</p>
            <p><strong>Quantity:</strong> @order.Quantity</p>
            <p><strong>Total:</strong> Rp @order.Total.ToString("N0")</p>
            <p><strong>Date:</strong> @order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
        </div>
        <a href="/">← Back to Store</a>
    </div>
</body>
</html>
